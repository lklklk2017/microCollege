<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    app:contentPaddingLeft="@dimen/general_padding_activity"
    app:contentPaddingRight="@dimen/general_padding_activity"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="0dp"
    android:elevation="1dp"
    android:layout_marginBottom="2dp"
    >
    <!--"-->
    <!--android:background="@drawable/actionbar_shadow_bg"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <!--back-->
        <ImageView
            android:id="@+id/custom_searchbar_back_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/last" />

        <ImageView
            android:id="@+id/custom_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/search" />

        <EditText
            android:id="@+id/custom_searchBar_Content_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="发现更多精彩"
            android:textColor="@color/colorDefaultHint"
            android:singleLine="true"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/custom_clear_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/input_close" />
    </LinearLayout>
</android.support.v7.widget.CardView>