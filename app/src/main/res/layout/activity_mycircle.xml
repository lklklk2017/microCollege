<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_circle_swip"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--action bar-->
        <cn.cuit.microcollege.widget.actionBar.CustomDefaultActionBar
            android:id="@+id/activity_my_circle_actionBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/general_actionbar_height"
            app:cs_text="@string/mycircle_title" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_my_circle_rcy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorDefaultBackGroundDark" />
    </LinearLayout>


</android.support.v4.widget.SwipeRefreshLayout>