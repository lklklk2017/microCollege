<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:elevation="3dp"
    app:cardUseCompatPadding="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="3dp">

    <!--item-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/general_padding_activity"
        android:paddingTop="5dp"
        android:paddingRight="@dimen/general_padding_activity"
        android:paddingBottom="5dp">

        <!--subTitle-->
        <TextView
            android:id="@+id/fragment_new_hot_subTitle_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="新华网"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <!--image-->
            <ImageView
                android:id="@+id/fragment_new_hot_bg_img"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@mipmap/ic_launcher" />
        </android.support.v7.widget.CardView>


        <!--title-->
        <TextView
            android:id="@+id/fragment_new_hot_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="微校反馈助手"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <!--count-->
            <TextView
                android:id="@+id/fragment_new_hot_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="微校反馈助手"
                android:textColor="@color/colorDefaultHint"
                android:textSize="13sp" />

            <!--date-->
            <TextView
                android:id="@+id/fragment_new_hot_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="05/03 07:43"

                android:textSize="10sp" />
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>