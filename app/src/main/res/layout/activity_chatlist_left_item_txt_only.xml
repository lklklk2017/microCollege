<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/general_padding_activity"
    android:paddingTop="5dp"
    android:paddingRight="20dp">

    <!--time-->
    <TextView
        android:id="@+id/chat_content_list_left_text_only_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="04/28: 23:43" />

    <!--content-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <!--img-->
        <ImageView
            android:id="@+id/chat_content_list_left_text_only_portrait"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/chat_content_list_left_text_only_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/chatlist_content_cor20_white"
            android:gravity="start"
            android:padding="10dp"
            android:text="你好"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

    </LinearLayout>


</LinearLayout>