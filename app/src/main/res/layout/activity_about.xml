<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDefaultBackGround"
    android:orientation="vertical">

    <cn.cuit.microcollege.widget.actionBar.CustomDefaultActionBar
        android:id="@+id/about_actionBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/general_actionbar_height"
        app:cs_text="关于微校" />

    <!--line two-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center">

        <!--image-->
        <ImageView
            android:id="@+id/about_logo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo_temp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_logo"
            android:layout_centerHorizontal="true"
            android:text="微校 v1.0" />
    </RelativeLayout>

    <!--line three-->
    <android.support.v7.widget.CardView
        android:id="@+id/about_update_cardv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="0.5dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="0dp"
        app:cardElevation="1dp"
        app:contentPaddingLeft="@dimen/general_padding_activity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!--text-->
            <TextView
                android:id="@+id/about_update_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="检查版本更新"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!--line three-->
    <android.support.v7.widget.CardView
        android:id="@+id/about_agreement_cardv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="0.5dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"

        app:cardCornerRadius="0dp"
        app:cardElevation="1dp"
        app:contentPaddingLeft="@dimen/general_padding_activity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!--text-->
            <TextView
                android:id="@+id/about_agreement_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="用户协议"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>