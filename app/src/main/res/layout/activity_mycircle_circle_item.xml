<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="0dp"
    app:cardElevation="1dp"
    android:clickable="true"
    app:contentPaddingLeft="@dimen/general_padding_activity"
    app:contentPaddingRight="@dimen/general_padding_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <!--img-->
        <ImageView
            android:id="@+id/activity_my_circle_rcy_item_portrait"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher" />
        <!--content-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_my_circle_rcy_item_circle_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="this is circle 's name"
                android:textColor="@android:color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/activity_my_circle_rcy_item_circle_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="this is circle 's title"
                android:textColor="@android:color/darker_gray"
                android:textSize="15sp" />

        </LinearLayout>
        <!--img-option-->
        <ImageView
            android:id="@+id/activity_my_circle_rcy_item_circle_option"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/more" />
    </LinearLayout>


</android.support.v7.widget.CardView>