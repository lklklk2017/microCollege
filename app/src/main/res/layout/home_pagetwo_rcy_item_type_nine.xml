<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    app:cardCornerRadius="0dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:paddingBottom="10dp">

        <!--line one circle-->
        <LinearLayout
            android:id="@+id/home_pageTwo_rcyItem_circle_tag"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/colorDefaultBackGroundDark"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/general_padding_activity"
            android:paddingRight="@dimen/general_padding_activity">

            <!--img-->
            <ImageView
                android:id="@+id/home_pageTwo_rcyItem_circle_tag_img"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/logo_temp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <!--name-->
                <TextView
                    android:id="@+id/home_pageTwo_rcyItem_circle_tag_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />
                <!--date-->
                <TextView
                    android:id="@+id/home_pageTwo_rcyItem_circle_tag_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="10sp" />
            </LinearLayout>

            <!--circle guide img-->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/next" />

        </LinearLayout>
        <!--line two content-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:paddingLeft="@dimen/general_padding_activity"
            android:paddingRight="@dimen/general_padding_activity">
            <!--text-->
            <TextView
                android:id="@+id/home_pageTwo_rcyItem_content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="8"
                android:text="动态文字内容"
                android:textColor="@android:color/black"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="@dimen/general_padding_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_pageTwo_rcyItem_content_img_one"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:src="@drawable/logo_temp" />

            <ImageView
                android:id="@+id/home_pageTwo_rcyItem_content_img_two"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/logo_temp" />

            <ImageView
                android:id="@+id/home_pageTwo_rcyItem_content_img_three"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/logo_temp" />
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="@dimen/general_padding_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_pageTwo_rcyItem_content_img_four"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:src="@drawable/logo_temp" />

            <ImageView
                android:id="@+id/home_pageTwo_rcyItem_content_img_five"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/logo_temp" />

            <ImageView
                android:id="@+id/home_pageTwo_rcyItem_content_img_six"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/logo_temp" />
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="@dimen/general_padding_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_pageTwo_rcyItem_content_img_seven"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:src="@drawable/logo_temp" />

            <ImageView
                android:layout_marginLeft="5dp"
                android:id="@+id/home_pageTwo_rcyItem_content_img_eight"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:src="@drawable/logo_temp" />

            <ImageView
                android:layout_marginLeft="5dp"
                android:id="@+id/home_pageTwo_rcyItem_content_img_nine"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:src="@drawable/logo_temp" />

        </LinearLayout>
        <!--circle-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/general_padding_activity"
            android:paddingRight="@dimen/general_padding_activity">

            <ImageView
                android:id="@+id/home_pageTwo_rcyItem_user_portrait_img"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/logo_temp" />

            <TextView
                android:id="@+id/home_pageTwo_rcyItem_user_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="用户名称"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="发布"
                android:textSize="12sp" />
        </LinearLayout>

        <!--line three foot-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/general_padding_activity"
            android:paddingRight="@dimen/general_padding_activity">
            <!--like-->
            <LinearLayout
                android:id="@+id/rcyItem_like_lyt"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/rcyItem_comment_lyt"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <ImageView
                    android:id="@+id/rcyItem_like_img"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/like_before" />

                <TextView
                    android:id="@+id/rcyItem_like_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="15sp" />

            </LinearLayout>
            <!--comment-->
            <LinearLayout
                android:id="@+id/rcyItem_comment_lyt"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <ImageView
                    android:id="@+id/rcyItem_comment_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/message" />

                <TextView
                    android:id="@+id/rcyItem_comment_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="15sp" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
